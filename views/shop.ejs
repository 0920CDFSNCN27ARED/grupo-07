                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">Playstation 4</th>
                        <td>1</td>
                        <td>$ 18000</td>
                        <td>$ 18000</td>
                    </tr>
                    <tr>
                        <th scope="row">Controlador DualShock 4</th>
                        <td>2</td>
                        <td>$ 1500</td>
                        <td>$ 3000</td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <th scope="row" colspan="2">Total: </th>
                        <td>$ 21000</th>
                    </tr>
                </tfoot>
            </table>

            <div>
                <input type="button" value="Save">
                <input type="button" value="Update">
                <input type="button" value="Delete">
            </div>
            <div>
                <!-- Detalles de los items del carrito de compra -->
            </div>

            <div>
                <!-- Productos seleccionados: Precio total -->
                <!-- Metodos de pago:  
                    -Efectivo
                    -Tarjeta
                    -Metodo de envío -->
                <!-- Finalizar compra: Detalles finales y botón para comprar -->
            </div>
        </section>
    </section>
    <%- include("partials/footer.ejs") %>

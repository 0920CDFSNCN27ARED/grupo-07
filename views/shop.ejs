<body class="body">
    <%- include("partials/header.ejs") %>
    <section class="title-font-box d-flex flex-col">
        <legend class="title-font">Mi carrito de compras</legend>

        <section id="shop-steps" class="d-flex flex-wrap justify-content-center align-items-center">

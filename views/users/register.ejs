<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head-base.ejs", {title: "Registrate"}) %>
</head>

<body class="body">
    <%- include("partials/header.ejs") %>

    <main class="container">
        <h2 class="font-title text-center margin-y-20 padding-y-10 font-6-vw">
            Registro
        </h2>

        <!-- ?_method=PUT - ?_method=DELETE como query string en action  -->
        <form action="/register" method="post" class="row">
            <div id="contact" class="col-md-6 w-100 margin-y-20">
                <strong>Datos de contacto</strong>

                <div class="form-group">
                    <label for="firstName">Nombre</label>
                    <input type="text" class="form-control" name="firstName" id="firstName" />
                </div>
                <div class="form-group">
                    <label for="lastName">Apellido</label>
                    <input type="text" class="form-control" name="lastName" id="lastName" />
                </div>

                <div class="form-group">
                    <label for="tel">Número de Teléfono</label>
                    <input type="tel" class="form-control" name="tel" id="tel" />
                </div>

                <div class="form-group">
                    <label for="dni">DNI</label>
                    <input type="text" class="form-control" name="dni" id="dni" />
                </div>
            </div>
            <div id="shipping" class="col-md-6 w-100 margin-y-20">
                <strong>Datos de envío</strong>

                <div class="form-group">
                    <label for="province">Elige tu provincia</label>
                    <select class="form-control" name="province" id="province">
                        <option value="caba">Capital Federal</option>
                        <option value="bsas">
                            Provincia de Buenos Aires
                        </option>
                        <option value="otros">Otros</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="city">Ciudad</label>
                    <input type="text" class="form-control" name="city" id="city" />
                </div>

                <div class="form-group">
                    <label for="address">Dirección</label>
                    <input type="text" class="form-control" name="address" id="address" />
                </div>

                <div class="form-group">
                    <label for="localidad">Localidad</label>
                    <input type="text" class="form-control" name="localidad" id="localidad" />
                </div>
            </div>

            <div id="mail-and-pass" class="col-md-12 w-100 margin-y-20">
                <div class="form-group">
                    <label for="email">Ingresa tu e-mail</label>
                    <input type="email" class="form-control" name="email" id="email" />
                </div>

                <div class="form-group">
                    <label for="password">Ingresa una contraseña</label>
                    <input type="password" class="form-control" name="password" id="password" />
                </div>
                <div class="form-group">
                    <label for="password-bis">Vuelve a ingresar tu contraseña</label>
                    <input type="password" class="form-control" name="password-bis" id="password-bis" />
                </div>
            </div>
            <div>
                <div class="tyc-box justify-content-center">
                    <label for="tyc " class="px-2">Acepto los términos y condiciones</label>
                    <input type="checkbox" name="tyc" id="tyc" />
                </div>

                <div class="newsletter-box justify-content-center">
                    <label for="newsletter" class="px-2">Quiero subscibirme al newsletter</label>
                    <input type="checkbox" name="newsletter" id="newsletter" />
                </div>
            </div>
            <div class="d-flex flex-wrap">
                <button type="submit">Crear cuenta</button>
                <a href="/login" class="py-2">¿Ya tienes una cuenta?</a>
            </div>
        </form>
    </main>
    <%- include("partials/footer.ejs") %>
</body>

</html>